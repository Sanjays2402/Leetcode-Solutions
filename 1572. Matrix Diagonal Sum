class Solution {
public:
    int diagonalSum(vector<vector<int>>& mat) {
        
        if(mat.size()==0)
            return 0;
        int sum=0;
        for(int i=0; i<mat.size(); i++)
        {
            for(int j=0; j<mat[0].size(); j++)
            {
                if(i==j || i==mat[0].size()-j-1)
                    sum += mat[i][j];
            }
        }
        return sum;
    }
};
