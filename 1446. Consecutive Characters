class Solution {
public:
    int maxPower(string s) {
        int ma=-1,ct=0;
        if(s.length() == 1) return 1;
        if(s.length() == 0) return 0;
        for(int i=0;i<s.length()-1;i++)
        {
            if(s[i]==s[i+1])
                ct++;
            else
                ct=0;
            ma=max(ct,ma);
        }
        return ma+1;
    }
};
