class Solution {
public:
    string restoreString(string s, vector<int>& indices) {
        
        vector<pair<int,char>> arr;
        for(int i=0; i<s.length(); i++)
        {
            arr.push_back(make_pair(indices[i], s[i]));
        }
        
        sort(arr.begin(), arr.end());
        string result="";
        
        for(int i=0; i<s.length(); i++)
            result += arr[i].second;
        
        return result;
        
    }
};
